var mask = ui('mask');
var app = sm('do_App');
var page = sm('do_Page');
var data = {};
var core = require('do/core');
page.on('result',function(res){
	alert(111);
	core.p(res);
	data.img = res.img;
})
mask.on('touch',function(){
	data.action = 0;
	app.closePage(data);
})
var takePic = ui('takePic');
var selectPic = ui('selectPic');

takePic.on('touch',function(){
	data.action = 1;
	app.closePage(data);
});

selectPic.on('touch',function(){
	data.action = 2;
	app.closePage(data);
})